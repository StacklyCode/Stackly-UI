{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "esmodules": true
        }
      }
    ],
    "next/babel",
    "@babel/preset-typescript",
    "@babel/preset-react"
  ],

  "env": {
    "production": {
      "plugins": [
        [
          "module-resolver",
          {
            "root": ["./"],
            "alias": {
              "@Src": "./src",
              "@Hooks": "./src/hooks",
              "@Apollo": "./src/apollo",
              "@Public": "./public",
              "@Config": "./src/config",
              "@Atoms": "./src/components/atoms",
              "@Molecules": "./src/components/molecules",
              "@Organisms": "./src/components/organisms",
              "@Templates": "./src/components/templates",
              "@Utils": "./src/utils",
              "@Assets": "./src/assets",
              "@Styles": "./src/styles"
            }
          }
        ],
        "@babel/plugin-transform-typescript"
      ]
    },
    "development": {
      "plugins": [["@emotion", { "sourceMap": true }]]
    },
    "test": {
      "plugins": [
        [
          "@emotion",
          { "sourceMap": true, "autoLabel": true, "labelFormat": "âš¡[local]" }
        ]
      ]
    }
  }
}
